<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.day1.dragdropselect.DragDropSelect
        android:id="@+id/customSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        custom:point_total="10"
        custom:point_size="24dp"
        custom:point_color="#060CE9"
        custom:border_thickness="14dp"
        custom:border_color="#FFD700"
        custom:thumb_size="24dp"
        custom:thumb_color="#000000" />

</RelativeLayout>
